{
    "name": "neos-fusion",
    "displayName": "Neos Fusion language support",
    "description": "Fusion and Eel language support for Neos CMS",
    "license": "MIT",
    "icon": "images/neos-fusion-icon.png",
    "galleryBanner": {
        "color": "#26224C",
        "theme": "dark"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/networkteam/vscode-neos-fusion.git"
    },
    "version": "2.0.0",
    "publisher": "networkteam",
    "engines": {
        "vscode": "^1.20.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "main": "./out/extension",
    "contributes": {
        "languages": [
            {
                "id": "fusion",
                "aliases": [
                    "Fusion",
                    "fusion"
                ],
                "extensions": [
                    ".fusion"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "fusion",
                "scopeName": "text.html.fusion",
                "path": "./syntaxes/fusion.tmLanguage.json",
                "embeddedLanguages": {
                    "meta.embedded.block.html": "html"
                }
            }
        ],
        "commands": [
            {
                "command": "extension.sayHello",
                "title": "Hello World"
            }
        ],
        "snippets": [
            {
                "language": "fusion",
                "path": "./snippets/neos-fusion-objects.json"
            },
            {
                "language": "fusion",
                "path": "./snippets/neos-neos-objects.json"
            }
        ]
    },
    "activationEvents": [
        "onLanguage:fusion",
        "workspaceContains:**/*.fusion"
    ],
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "test": "npm run compile && node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^7.1.3",
        "@types/mocha": "^9.0.0",
        "@types/node": "^16.11.17",
        "@types/vscode": "^1.63.1",
        "chai": "^4.3.4",
        "mocha": "^9.1.3",
        "tslint": "^6.1.3",
        "typescript": "^4.5.4",
        "vscode-test": "^1.6.1"
    },
    "dependencies": {
        "event-stream": "3.3.4",
        "fusion-parser": "^1.0.0"
    }
}
